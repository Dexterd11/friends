{% extends 'base.html.twig' %}

{% block title %}Friends{% endblock %}

{% block body %}
	<style>
		.wrapper {
			margin: 1em auto;
			width: 95%;
		}
	</style>

	<div class="wrapper">

		<table class="table table-striped table-hover table-bordered">
			{% for id in friends %}
			<thead>
			<tr>
				<th scope="col">From User</th>
				{% if id.chain_1 is defined %}
					<th scope="col">Step 1</th>
				{% endif %}
				{% if id.chain_2 is defined %}
					<th scope="col">Step 2</th>
				{% endif %}
				{% if id.chain_3 is defined %}
					<th scope="col">Step 3</th>
				{% endif %}
				<th scope="col">To User</th>
			</tr>
			</thead>
			<tbody>
				<tr>
					<td>{{ id.user_from }}</td>
					{% if id.chain_1 is defined %}
						<td>{{ id.chain_1 }}</td>
					{% endif %}
					{% if id.chain_2 is defined %}
						<td>{{ id.chain_2 }}</td>
					{% endif %}
					{% if id.chain_3 is defined %}
						<td>{{ id.chain_3 }}</td>
					{% endif %}
					<td>{{ id.user_till }}</td>
				</tr>
			{% endfor %}
			</tbody>
		</table>
	</div>
{% endblock %}
